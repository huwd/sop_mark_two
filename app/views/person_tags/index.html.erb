<p id="notice"><%= notice %></p>

<h1>Person Tags</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_tags.each do |person_tag| %>
      <tr>
        <td><%= person_tag.person.current_name %></td>
        <td><%= person_tag.tag.value %></td>
        <td><%= link_to 'Show', person_tag %></td>
        <td><%= link_to 'Edit', edit_person_tag_path(person_tag) %></td>
        <td><%= link_to 'Destroy', person_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person Tag', new_person_tag_path %>
