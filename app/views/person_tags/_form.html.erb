<%= form_with(model: person_tag, local: true) do |form| %>
  <% if person_tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person_tag.errors.count, "error") %> prohibited this person_tag from being saved:</h2>

      <ul>
        <% person_tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :person_id %>
    <%= form.select :person_id, @people.map {|person| [person.current_name, person.id]}.prepend(nil) %>
  </div>

  <div class="field">
    <%= form.label :tag_id %>
    <%= form.select :tag_id, @tags.map {|tag| [tag.value, tag.id]}.prepend(nil) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
