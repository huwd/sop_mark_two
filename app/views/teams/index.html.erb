<p id="notice"><%= notice %></p>

<h1 class="govuk-heading-l">Teams</h1>

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Name</th>
      <th scope="col" class="govuk-table__header">Start time</th>
      <th scope="col" class="govuk-table__header">End time</th>
      <th scope="col" class="govuk-table__header">Description</th>
      <th scope="col" class="govuk-table__header" colspan="3"></th>
    </tr>
  </thead>

  <tbody class="govuk-table__body">
    <% @teams.each do |team| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell"><%= team.name %></td>
        <td class="govuk-table__cell"><%= team.start_time %></td>
        <td class="govuk-table__cell"><%= team.end_time %></td>
        <td class="govuk-table__cell"><%= team.description %></td>
        <td class="govuk-table__cell"><%= link_to 'Show', team %></td>
        <td class="govuk-table__cell"><%= link_to 'Edit', edit_team_path(team) %></td>
        <td class="govuk-table__cell"><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to 'New Team', new_team_path %>
</p>
