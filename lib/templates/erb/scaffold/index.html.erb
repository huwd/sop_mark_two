<p id="notice"><%%= notice %></p>

<h1 class="govuk-heading-l"><%= plural_table_name.titleize %></h1>

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th class="govuk-table__header"><%= attribute.human_name %></th>
<% end -%>
      <th colspan="3" class="govuk-table__header"></th>
    </tr>
  </thead>

  <tbody class="govuk-table__body">
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr class="govuk-table__row">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td class="govuk-table__cell"><%%= <%= singular_table_name %>.<%= attribute.column_name %> %></td>
<% end -%>
        <td class="govuk-table__cell"><%%= link_to 'Show', <%= model_resource_name %> %></td>
        <td class="govuk-table__cell"><%%= link_to 'Edit', edit_<%= singular_route_name %>_path(<%= singular_table_name %>) %></td>
        <td class="govuk-table__cell"><%%= link_to 'Destroy', <%= model_resource_name %>, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%% end %>
  </tbody>
</table>

<p><%%= link_to 'New <%= singular_table_name.titleize %>', new_<%= singular_route_name %>_path %></p>
